package bangfe.ui{	import bangfe.core.CoreDisplayObject;		import flash.display.DisplayObject;
		public class BasicNavigation extends CoreDisplayObject	{				//--------------------------------------		//  PRIVATE VARIABLES		//--------------------------------------		private var _navigationGroup : NavigationGroup = new NavigationGroup();				//--------------------------------------		//  PUBLIC METHODS		//--------------------------------------		/**		 * Clear out all navigation items from this navigation 		 * 		 */		public function clear () : void		{			while(this.numChildren > 0){				var child : DisplayObject = this.getChildAt(0);								if(child is NavigationItem){					NavigationItem(child).destroy();				}else{					this.removeChild(child);				}			}			}				//--------------------------------------		//  ACCESSOR/MUTATOR METHODS		//--------------------------------------		/**		 * The navigation group used by this navigation 		 * @return 		 * 		 */		public function get navigationGroup () : NavigationGroup		{			return _navigationGroup;		}				public function set navigationGroup ( p_navigationGroup : NavigationGroup ) : void		{			_navigationGroup = p_navigationGroup;		}				//--------------------------------------		//  PROTECTED METHODS		//--------------------------------------				override protected function setGlobalDefaults():void		{			applyNavigationGroup();		}				protected function applyNavigationGroup () : void		{			var count : int = this.numChildren;						for ( var i : int = 0; i < count; i++ ){				var child : * = this.getChildAt(i);								if(child is NavigationItem){					NavigationItem(child).navigationGroup = navigationGroup;				}			}		}			}}
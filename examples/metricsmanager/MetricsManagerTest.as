package{	import bangfe.core.CoreDisplayObject;	import bangfe.metrics.MetricsManager;	import bangfe.metrics.trackers.GoogleTracker;	import bangfe.simpleaudioplayer.SimpleAudioPlayer;	import bangfe.ui.ToggleButton;		import flash.display.SimpleButton;	import flash.display.Sprite;	import flash.events.MouseEvent;
	public class MetricsManagerTest extends CoreDisplayObject	{				public var testButton : SimpleButton;				//--------------------------------------		//  PROTECTED METHODS		//--------------------------------------			override protected function setDefaults():void		{			//Prep the google tracker			var googleTracker : GoogleTracker = new GoogleTracker(this);			googleTracker.gaTracker.account = "UA-7402252-00";			googleTracker.gaTracker.build();			MetricsManager.google = googleTracker;						MetricsManager.debugMode = true;		}				override protected function addListeners():void		{			testButton.addEventListener(MouseEvent.CLICK, testButtonClickHandler);		}				override protected function postInit():void		{			}				//--------------------------------------		//  HANDLER METHODS		//--------------------------------------				private function testButtonClickHandler( e : MouseEvent ):void		{			MetricsManager.google.trackPage("/home");			}					}}